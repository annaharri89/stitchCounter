<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.etaspare.stitchcounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleCounterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".DoubleCounterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".LibraryActivity" />
        <activity
            android:name=".NewCounterActivity"
            android:theme="@style/Theme.MyDialog" />

        <provider
            android:name=".CounterProjectContentProvider"
            android:authorities="com.example.etaspare.stitchcounter.counterProject"
            android:exported="false" />
        <!-- TODO put minimum targetable api sdk: 21.0 -->
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.etaspare.stitchcounter.MainActivity"
        android:id="@+id/layout">

        <include
            android:id="@+id/toolbar_main"
            layout="@layout/toolbar" />

        <Button
            android:id="@+id/button_basic_counter"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:onClick="createNewSingleCounter"
            android:text="@string/action_single_counter_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_advanced_counter"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/button_advanced_counter"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:onClick="createNewDoubleCounter"
            android:text="@string/action_double_counter_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_basic_counter" />

    </android.support.constraint.ConstraintLayout>
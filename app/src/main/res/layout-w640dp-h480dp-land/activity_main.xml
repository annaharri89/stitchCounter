<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.etaspare.stitchcounter.MainActivity"
    android:id="@+id/layout">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/button_single_counter"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:onClick="createNewSingleCounter"
        android:text="@string/action_single_counter_btn"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_double_counter"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/button_double_counter"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:onClick="createNewDoubleCounter"
        android:text="@string/action_double_counter_btn"
        android:stateListAnimator="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_single_counter" />

    <!-- Help Mode -->

    <TextView
        android:id="@+id/help_main_activity_1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/help_main_activity_1"
        android:textColor="#FFFFFF"
        android:background="?attr/themedAnnotationBubbleDrawable"
        android:padding="5dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/button_single_counter"
        app:layout_constraintBottom_toBottomOf="@+id/button_single_counter"
        app:layout_constraintRight_toLeftOf="@+id/button_single_counter"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/help_main_activity_2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="?attr/themedAnnotationBubbleDrawable"
        android:padding="5dp"
        android:visibility="invisible"
        android:text="@string/help_main_activity_2"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/button_double_counter"
        app:layout_constraintTop_toTopOf="@+id/button_double_counter"
        app:layout_constraintBottom_toBottomOf="@+id/button_double_counter"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.502" />

    <View
        android:id="@+id/help_main_activity_1_tip"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/themedAnnotationArrowDrawable"
        android:rotation="90"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/help_main_activity_1"
        app:layout_constraintBottom_toBottomOf="@+id/help_main_activity_1"
        app:layout_constraintLeft_toRightOf="@+id/help_main_activity_1"
        android:layout_marginLeft="0dp" />

    <View
        android:id="@+id/help_main_activity_2_tip"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:background="?attr/themedAnnotationArrowDrawable"
        android:rotation="270"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@+id/help_main_activity_2"
        app:layout_constraintBottom_toBottomOf="@+id/help_main_activity_2"
        app:layout_constraintTop_toTopOf="@+id/help_main_activity_2" />

</android.support.constraint.ConstraintLayout>
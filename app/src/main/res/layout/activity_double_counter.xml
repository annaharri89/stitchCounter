            app:layout_constraintTop_toBottomOf="@+id/button_capsule_middle_stitch"
            app:layout_constraintRight_toLeftOf="@+id/button_counter_minus_stitch"
            app:layout_constraintBottom_toTopOf="@+id/text_row_header" />


            app:layout_constraintTop_toBottomOf="@+id/text_stitch_header"
            app:layout_constraintRight_toLeftOf="@+id/button_counter_reset_stitch"
            app:layout_constraintBottom_toTopOf="@+id/button_counter_minus_stitch" />

        <Button

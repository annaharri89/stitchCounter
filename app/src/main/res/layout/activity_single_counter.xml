        android:visibility="invisible"
        android:id="@+id/top_layout">

        <TextView
            android:id="@+id/help_single_counter_activity_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/annotation_bubble"
            android:padding="5dp"
            android:text="@string/help_single_counter_1"
            android:layout_marginTop="64dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/help_single_counter_activity_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/annotation_bubble"
            android:padding="5dp"
            android:text="@string/help_single_counter_adjustment"
            android:layout_marginTop="292dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/help_single_counter_activity_3"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@drawable/annotation_bubble"
            android:padding="5dp"
            android:text="@string/help_single_counter_plus_minus"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/help_single_counter_activity_4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/annotation_bubble"
            android:padding="5dp"
            android:text="@string/help_single_counter_reset"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/help_single_counter_activity_1_connector"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="96dp"
            android:background="@color/colorAccent"
            app:layout_constraintRight_toLeftOf="@+id/help_single_counter_activity_1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/help_single_counter_activity_2_connector"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="168dp"
            app:layout_constraintTop_toBottomOf="@+id/help_single_counter_activity_2"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/help_single_counter_activity_4_connector"
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/help_single_counter_activity_4" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>

